.gradle/
gradle-app.setting
!gradle-wrapper.jar
!gradle-wrapper.properties

# IDE - IntelliJ IDEA
.idea/
*.iml
*.ipr
*.iws

# IDE - Eclipse
.settings/
.project
.classpath
.metadata/

# IDE - VS Code
.vscode/
*.code-workspace

# IDE - NetBeans
nbproject/
nbbuild/
dist/
nbdist/

# OS - macOS
.DS_Store
.AppleDouble
.LSOverride

